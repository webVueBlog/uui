{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "arrow-parens": [false, "ban-single-arg-parens"],
    "no-namespace": false,
    "only-arrow-functions": false,
    "prefer-const": false,
    "prefer-for-of": false,
    "no-string-literal": false,
    "no-parameter-reassignment": false,
    "no-any": false,
    "no-angle-bracket-type-assertion": false,
    "variable-name": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      {
        "limit": 200
      }
    ]
  },
  "globals": {
    "config": true
  }
}